# this is the common settings for the various scripts here

mnt=/data/debian # in /dev because /data is mounted 'nodev'
sdcard=/mnt/sdcard
imagefile=$sdcard/debian.img
loopdev=/dev/block/loop4

app_payload=/data/lildebi
imagesize=159999999
repo=http://ftp.us.debian.org/debian
distro=stable


make_root_symlinks () {
    /system/bin/mount -oremount,rw rootfs /
 
    for x in \
        bin boot home media mnt \
        opt selinux srv usr var
    do
        /system/bin/ln -s $mnt/$x /
    done

    /system/bin/mount -oremount,ro rootfs /
}
